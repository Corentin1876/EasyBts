{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - Inscription BTS{% endblock %}

{% block body %}
<!-- Messages flash -->
{% for message in app.flashes('error') %}
    <div class="fr-container fr-mt-2v">
        <div class="fr-alert fr-alert--error">
            <p>{{ message }}</p>
        </div>
    </div>
{% endfor %}

<!-- Fil d'ariane -->
<nav class="fr-breadcrumb" aria-label="vous êtes ici :">
    <button class="fr-breadcrumb__button" aria-expanded="false" aria-controls="breadcrumb-forgot">Voir le fil d'Ariane</button>
    <div class="fr-collapse" id="breadcrumb-forgot">
        <ol class="fr-breadcrumb__list">
            <li>
                <a class="fr-breadcrumb__link" href="{{ path('app_home') }}">Accueil</a>
            </li>
            <li>
                <a class="fr-breadcrumb__link" href="{{ path('app_inscription') }}">Inscription</a>
            </li>
            <li>
                <a class="fr-breadcrumb__link" aria-current="page">Mot de passe oublié</a>
            </li>
        </ol>
    </div>
</nav>

<!-- Formulaire de demande de réinitialisation -->
<section class="fr-container fr-py-6v">
    <div class="fr-grid-row fr-grid-row--center">
        <div class="fr-col-12 fr-col-md-8 fr-col-lg-6">
            <div class="fr-card fr-card--no-arrow">
                <div class="fr-card__body">
                    <div class="fr-card__content">
                        <h1 class="fr-h2">Mot de passe oublié</h1>
                        <p class="fr-text--lead fr-mb-4v">
                            Saisissez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                        </p>
                        <hr class="fr-hr fr-mb-4v">

                        <form class="fr-form" method="post" action="{{ path('app_forgot_password_request') }}">
                            <div class="fr-input-group">
                                <label class="fr-label" for="email">
                                    Adresse électronique
                                    <span class="fr-hint-text">L'adresse email utilisée lors de votre inscription</span>
                                </label>
                                <input class="fr-input" type="email" id="email" name="email" required>
                            </div>

                            <div class="fr-btns-group">
                                <button class="fr-btn" type="submit">
                                    Envoyer le lien de réinitialisation
                                </button>
                                <a class="fr-btn fr-btn--secondary" href="{{ path('app_inscription') }}">
                                    Annuler
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
