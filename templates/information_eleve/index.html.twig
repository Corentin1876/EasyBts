{% extends 'base.html.twig' %}

{% block title %}InformationEleve index{% endblock %}

{% block body %}
    <h1>InformationEleve index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NiveauClasse</th>
                <th>Sexe</th>
                <th>NumeroSecuriterSocial</th>
                <th>Date_Entree</th>
                <th>Nationalite</th>
                <th>Naissance_Departement</th>
                <th>Naissance_Commune</th>
                <th>Redoublement</th>
                <th>Transport</th>
                <th>TypeTransport</th>
                <th>NumeroImmatriculationVehicule</th>
                <th>Specialiter</th>
                <th>Langues</th>
                <th>Dernier_Diplome</th>
                <th>RegimeChoisi</th>
                <th>DateChoixRegime</th>
                <th>Autorisation_Droit_Image</th>
