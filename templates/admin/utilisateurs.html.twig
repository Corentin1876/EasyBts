{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs - Administration{% endblock %}

{% block body %}
<div class="fr-container fr-my-4w">
    <div class="fr-grid-row">
        <div class="fr-col-12">
            <h1 class="fr-h2">Gestion des utilisateurs</h1>
            
            {% for message in app.flashes('success') %}
                <div class="fr-alert fr-alert--success fr-my-2w">
                    <p>{{ message }}</p>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="fr-alert fr-alert--error fr-my-2w">
                    <p>{{ message }}</p>
                </div>
            {% endfor %}

            <div class="fr-table fr-mt-4w">
                <table>
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Email</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Prénom</th>
                            <th scope="col">Date de naissance</th>
                            <th scope="col">Rôles</th>
                            <th scope="col">Date de création</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for utilisateur in utilisateurs %}
                        <tr>
                            <td>{{ utilisateur.id }}</td>
                            <td>{{ utilisateur.email }}</td>
                            <td>{{ utilisateur.nom }}</td>
                            <td>{{ utilisateur.prenom }}</td>
                            <td>{{ utilisateur.dateNaissance ? utilisateur.dateNaissance|date('d/m/Y') : '-' }}</td>
                            <td>
                                {% if 'ROLE_ADMIN' in utilisateur.roles %}
                                    <span class="fr-badge fr-badge--error">Administrateur</span>
                                {% else %}
                                    <span class="fr-badge fr-badge--info">Utilisateur</span>
                                {% endif %}
                            </td>
                            <td>{{ utilisateur.dateCreation ? utilisateur.dateCreation|date('d/m/Y H:i') : '-' }}</td>
                            <td>
                                <div class="fr-btns-group fr-btns-group--inline fr-btns-group--sm">
                                    <a href="{{ path('app_admin_toggle_role', {id: utilisateur.id}) }}" 
                                       class="fr-btn fr-btn--sm fr-btn--secondary"
                                       title="{% if 'ROLE_ADMIN' in utilisateur.roles %}Retirer le rôle admin{% else %}Promouvoir en admin{% endif %}">
                                        {% if 'ROLE_ADMIN' in utilisateur.roles %}
                                            <span class="fr-icon-arrow-down-line" aria-hidden="true"></span>
                                            Rétrograder
                                        {% else %}
                                            <span class="fr-icon-arrow-up-line" aria-hidden="true"></span>
                                            Promouvoir
                                        {% endif %}
                                    </a>
                                    
                                    <form method="post" action="{{ path('app_admin_delete_user', {id: utilisateur.id}) }}" 
                                          style="display: inline;"
                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer l\'utilisateur {{ utilisateur.prenom }} {{ utilisateur.nom }} ? Cette action est irréversible.');">
                                        <button type="submit" class="fr-btn fr-btn--sm fr-btn--secondary fr-btn--icon-left fr-icon-delete-line">
                                            Supprimer
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="8" class="fr-text--center">Aucun utilisateur trouvé</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="fr-mt-4w">
                <p class="fr-text--sm fr-text--regular">
                    <strong>Total :</strong> {{ utilisateurs|length }} utilisateur(s)
                </p>
            </div>

            <div class="fr-mt-4w">
                <a href="{{ path('app_home') }}" class="fr-btn fr-btn--secondary fr-btn--icon-left fr-icon-arrow-left-line">
                    Retour à l'accueil
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
