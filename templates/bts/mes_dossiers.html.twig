{% extends 'base.html.twig' %}

{% block title %}Mes dossiers - Inscription BTS{% endblock %}

{% block body %}
<!-- Fil d'ariane -->
<nav class="fr-breadcrumb" aria-label="vous êtes ici :">
    <button class="fr-breadcrumb__button" aria-expanded="false" aria-controls="breadcrumb-mes-dossiers">Voir le fil d'Ariane</button>
    <div class="fr-collapse" id="breadcrumb-mes-dossiers">
        <ol class="fr-breadcrumb__list">
            <li><a class="fr-breadcrumb__link" href="{{ path('app_home') }}">Accueil</a></li>
            <li><a class="fr-breadcrumb__link" aria-current="page">Mes dossiers</a></li>
        </ol>
    </div>
</nav>

<!-- En-tête -->
<section class="fr-container fr-py-6v">
    <div class="fr-grid-row">
        <div class="fr-col-12">
            <h1 class="fr-h1">Mes dossiers d'inscription</h1>
            <p class="fr-text--lead fr-mb-3v">
                Consultez et gérez vos dossiers d'inscription et formulaires complémentaires.
            </p>
        </div>
    </div>
</section>

<!-- Liste des dossiers -->
<section class="fr-container fr-pb-6v">
    {% if dossiers|length > 0 %}
        <h2 class="fr-h2 fr-mb-3v">Dossier d'inscription BTS</h2>
        <div class="fr-grid-row fr-grid-row--gutters">
            {% for dossier in dossiers %}
            <div class="fr-col-12">
                <div class="fr-card">
                    <div class="fr-card__body">
                        <div class="fr-card__content">
                            <h3 class="fr-card__title">
                                {{ dossier.typeFormulaire }}
                            </h3>
                            <p class="fr-card__desc">
                                <strong>Statut :</strong> 
                                {% if dossier.statut == 'validé' %}
                                    <span class="fr-badge fr-badge--success">Validé</span>
                                {% elseif dossier.statut == 'en_attente' %}
                                    <span class="fr-badge fr-badge--info">En attente</span>
                                {% elseif dossier.statut == 'brouillon' %}
                                    <span class="fr-badge fr-badge--warning">Brouillon</span>
                                {% elseif dossier.statut == 'rejeté' %}
                                    <span class="fr-badge fr-badge--error">Rejeté</span>
                                {% else %}
                                    <span class="fr-badge">{{ dossier.statut }}</span>
                                {% endif %}
                            </p>
                            <p class="fr-card__desc">
                                <strong>Date de soumission :</strong> 
                                {{ dossier.dateSoumission ? dossier.dateSoumission|date('d/m/Y à H:i') : 'Non soumis' }}
                            </p>
                        </div>
                        <div class="fr-card__footer">
                            <ul class="fr-btns-group fr-btns-group--inline-sm">
                                {% if dossier.statut == 'brouillon' %}
                                <li>
                                    <a href="{{ path('app_bts_dossier_view', {'id': dossier.id}) }}" class="fr-btn fr-btn--sm">
                                        Continuer le dossier
                                    </a>
                                </li>
                                {% else %}
                                <li>
                                    <a href="{{ path('app_bts_dossier_view', {'id': dossier.id}) }}" class="fr-btn fr-btn--sm fr-btn--secondary">
                                        Voir le dossier
                                    </a>
                                </li>
                                {% endif %}
                                {% if dossier.statut == 'validé' %}
                                <li>
                                    <a href="{{ path('app_bts_inscription_pdf', {'id': dossier.id}) }}" class="fr-btn fr-btn--sm fr-btn--secondary fr-icon-download-line fr-btn--icon-left">
                                        Télécharger PDF
                                    </a>
                                </li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    {% endif %}

    {% if dossiersAdhesion is defined and dossiersAdhesion|length > 0 %}
        <h2 class="fr-h2 fr-mb-3v fr-mt-6v">Dossier d'adhésion MDL</h2>
        <div class="fr-grid-row fr-grid-row--gutters">
            {% for adhesion in dossiersAdhesion %}
            <div class="fr-col-12">
                <div class="fr-card">
                    <div class="fr-card__body">
                        <div class="fr-card__content">
                            <h3 class="fr-card__title">
                                <span class="fr-icon-team-line fr-mr-1w" aria-hidden="true"></span>
                                Adhésion à la Maison Des Lycéens
                            </h3>
                            <p class="fr-card__desc">
                                <strong>Statut :</strong> 
                                {% if adhesion.statut == 'à modifier' %}
                                    <span class="fr-badge fr-badge--warning">À modifier</span>
                                {% elseif adhesion.statut == 'validé' %}
                                    <span class="fr-badge fr-badge--success">Validé</span>
                                {% else %}
                                    <span class="fr-badge fr-badge--info">En attente de vérification</span>
                                {% endif %}
                            </p>
                            <p class="fr-card__desc">
                                <strong>Date de soumission :</strong> 
                                {{ adhesion.dateSoumission ? adhesion.dateSoumission|date('d/m/Y à H:i') : 'Non soumis' }}
                            </p>
                            {% if adhesion.statut == 'à modifier' %}
                                <div class="fr-alert fr-alert--warning fr-mt-2w">
                                    <p class="fr-text--sm">
                                        <strong>Action requise :</strong> L'administration a demandé des modifications sur votre dossier. 
                                        Veuillez apporter les corrections nécessaires et resoumettre votre dossier.
                                    </p>
                                </div>
                            {% elseif adhesion.statut != 'validé' %}
                                <div class="fr-alert fr-alert--info fr-mt-2w">
                                    <p class="fr-text--sm">Votre demande d'adhésion est en cours de traitement par l'administration. Vous serez notifié dès qu'une décision sera prise.</p>
                                </div>
                            {% endif %}
                        </div>
                        <div class="fr-card__footer">
                            <ul class="fr-btns-group fr-btns-group--inline-sm">
                                {% if adhesion.statut == 'à modifier' %}
                                <li>
                                    <a href="{{ path('app_adhesion_mdl') }}" class="fr-btn fr-btn--sm">
                                        Modifier le dossier
                                    </a>
                                </li>
                                {% else %}
                                <li>
                                    <a href="{{ path('app_adhesion_mdl_voir', {id: adhesion.id}) }}" class="fr-btn fr-btn--sm fr-btn--secondary">
                                        Voir le dossier
                                    </a>
                                </li>
                                {% endif %}
                                {% if adhesion.statut == 'validé' %}
                                <li>
                                    <a href="{{ path('app_adhesion_mdl_pdf', {id: adhesion.id}) }}" class="fr-btn fr-btn--sm fr-btn--secondary fr-icon-download-line fr-btn--icon-left" target="_blank">
                                        Télécharger PDF
                                    </a>
                                </li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    {% endif %}

    {% if fichesUrgence is defined and fichesUrgence|length > 0 %}
        <div class="fr-mt-6v">
            <h2 class="fr-h2 fr-mb-3v">
                <span class="fr-icon-phone-line fr-mr-1w" aria-hidden="true"></span>
                Ma fiche d'urgence
            </h2>
            
            {% for fiche in fichesUrgence %}
            <div class="fr-mb-3w">
                <div class="fr-card fr-card--horizontal">
                    <div class="fr-card__body">
                        <div class="fr-card__content">
                            <h3 class="fr-card__title">
                                <span class="fr-icon-phone-line fr-mr-1w" aria-hidden="true"></span>
                                Fiche d'urgence
                            </h3>
                            <p class="fr-card__desc">
                                <strong>Statut :</strong> 
                                {% if fiche.statut == 'à modifier' %}
                                    <span class="fr-badge fr-badge--warning">À modifier</span>
                                {% elseif fiche.statut == 'validé' %}
                                    <span class="fr-badge fr-badge--success">Validé</span>
                                {% else %}
                                    <span class="fr-badge fr-badge--info">En attente de vérification</span>
                                {% endif %}
                            </p>
                            <p class="fr-card__desc">
                                <strong>Date de soumission :</strong> 
                                {{ fiche.dateSoumission ? fiche.dateSoumission|date('d/m/Y à H:i') : 'Non soumis' }}
                            </p>
                            {% if fiche.statut == 'à modifier' %}
                                <div class="fr-alert fr-alert--warning fr-mt-2w">
                                    <p class="fr-text--sm">
                                        <strong>Action requise :</strong> L'administration a demandé des modifications sur votre fiche. 
                                        Veuillez apporter les corrections nécessaires et resoumettre votre fiche.
                                    </p>
                                </div>
                            {% elseif fiche.statut != 'validé' %}
                                <div class="fr-alert fr-alert--info fr-mt-2w">
                                    <p class="fr-text--sm">Votre fiche d'urgence est en cours de traitement par l'administration. Vous serez notifié dès qu'une décision sera prise.</p>
                                </div>
                            {% endif %}
                        </div>
                        <div class="fr-card__footer">
                            <ul class="fr-btns-group fr-btns-group--inline-sm">
                                {% if fiche.statut == 'à modifier' %}
                                <li>
                                    <a href="{{ path('app_fiche_urgence') }}" class="fr-btn fr-btn--sm">
                                        Modifier la fiche
                                    </a>
                                </li>
                                {% else %}
                                <li>
                                    <a href="{{ path('app_fiche_urgence_voir', {id: fiche.id}) }}" class="fr-btn fr-btn--sm fr-btn--secondary">
                                        Voir la fiche
                                    </a>
                                </li>
                                {% endif %}
                                {% if fiche.statut == 'validé' %}
                                <li>
                                    <a href="{{ path('app_fiche_urgence_pdf', {id: fiche.id}) }}" class="fr-btn fr-btn--sm fr-btn--secondary fr-icon-download-line fr-btn--icon-left" target="_blank">
                                        Télécharger PDF
                                    </a>
                                </li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    {% endif %}

    {# Formulaires d'intendance #}
    {% if formulairesIntendance is defined and formulairesIntendance|length > 0 %}
        <div class="fr-mt-6v">
            <h2 class="fr-h2 fr-mb-3v">
                <span class="fr-icon-bank-line fr-mr-1w" aria-hidden="true"></span>
                Mon formulaire d'intendance
            </h2>
            
            {% for formulaire in formulairesIntendance %}
            <div class="fr-mb-3w">
                <div class="fr-card fr-card--horizontal">
                    <div class="fr-card__body">
                        <div class="fr-card__content">
                            <h3 class="fr-card__title">
                                <span class="fr-icon-bank-line fr-mr-1w" aria-hidden="true"></span>
                                Formulaire d'intendance
                            </h3>
                            <p class="fr-card__desc">
                                <strong>Statut :</strong> 
                                {% if formulaire.statut == 'à modifier' %}
                                    <span class="fr-badge fr-badge--warning">À modifier</span>
                                {% elseif formulaire.statut == 'validé' %}
                                    <span class="fr-badge fr-badge--success">Validé</span>
                                {% else %}
                                    <span class="fr-badge fr-badge--info">En attente de vérification</span>
                                {% endif %}
                            </p>
                            <p class="fr-card__desc">
                                <strong>Date de soumission :</strong> 
                                {{ formulaire.dateSoumission ? formulaire.dateSoumission|date('d/m/Y à H:i') : 'Non soumis' }}
                            </p>
                            {% if formulaire.statut == 'à modifier' %}
                                <div class="fr-alert fr-alert--warning fr-mt-2w">
                                    <p class="fr-text--sm">
                                        <strong>Action requise :</strong> L'administration a demandé des modifications sur votre formulaire. 
                                        Veuillez apporter les corrections nécessaires et resoumettre votre formulaire.
                                    </p>
                                </div>
                            {% elseif formulaire.statut != 'validé' %}
                                <div class="fr-alert fr-alert--info fr-mt-2w">
                                    <p class="fr-text--sm">Votre formulaire d'intendance est en cours de traitement par l'administration. Vous serez notifié dès qu'une décision sera prise.</p>
                                </div>
                            {% endif %}
                        </div>
                        <div class="fr-card__footer">
                            <ul class="fr-btns-group fr-btns-group--inline-sm">
                                {% if formulaire.statut == 'à modifier' %}
                                <li>
                                    <a href="{{ path('app_formulaire_intendance') }}" class="fr-btn fr-btn--sm">
                                        Modifier le formulaire
                                    </a>
                                </li>
                                {% elseif formulaire.statut == 'validé' %}
                                <li>
                                    <a href="{{ path('app_formulaire_intendance_voir', {id: formulaire.id}) }}" class="fr-btn fr-btn--sm fr-btn--secondary">
                                        Voir le formulaire
                                    </a>
                                </li>
                                {% endif %}
                                {% if formulaire.statut == 'validé' %}
                                <li>
                                    <a href="{{ path('app_formulaire_intendance_pdf', {id: formulaire.id}) }}" class="fr-btn fr-btn--sm fr-btn--secondary fr-icon-download-line fr-btn--icon-left" target="_blank">
                                        Télécharger PDF
                                    </a>
                                </li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    {% endif %}

    {% if (dossiers is not defined or dossiers|length == 0) and (dossiersAdhesion is not defined or dossiersAdhesion|length == 0) %}
        <div class="fr-alert fr-alert--info">
            <p class="fr-alert__title">Aucun dossier</p>
            <p>Vous n'avez pas encore de dossier d'inscription.</p>
        </div>
        
        <div class="fr-mt-4v">
            <a href="{{ path('app_bts_liste') }}" class="fr-btn fr-icon-add-line fr-btn--icon-left">
                Créer mon premier dossier
            </a>
        </div>
    {% endif %}
    
    {% if dossiers|length > 0 %}
        <!-- Formulaires complémentaires -->
        {% set hasDossierValide = false %}
        {% for dossier in dossiers %}
            {% if dossier.statut == 'validé' %}
                {% set hasDossierValide = true %}
            {% endif %}
        {% endfor %}
        
        {% if hasDossierValide %}
        <div class="fr-mt-6v">
            <h2 class="fr-h2 fr-mb-3v">Formulaires complémentaires</h2>
            <p class="fr-text--lead fr-mb-4v">
                Maintenant que votre dossier d'inscription BTS est validé, complétez les formulaires suivants :
            </p>
            
            <div class="fr-grid-row fr-grid-row--gutters">
                <div class="fr-col-12 fr-col-md-6 fr-col-lg-4">
                    <div class="fr-card">
                        <div class="fr-card__body">
                            <div class="fr-card__content">
                                <h3 class="fr-card__title">
                                    <span class="fr-icon-team-line fr-icon--lg" aria-hidden="true"></span>
                                    Adhésion MDL
                                </h3>
                                <p class="fr-card__desc">
                                    Adhérez à la Maison Des Lycéens (MDL) pour participer à la vie associative de l'établissement.
                                </p>
                            </div>
                            <div class="fr-card__footer">
                                <ul class="fr-btns-group">
                                    <li>
                                        {% if dossiersAdhesion is defined and dossiersAdhesion|length > 0 %}
                                            {% set adhesionValidee = false %}
                                            {% for adh in dossiersAdhesion %}
                                                {% if adh.statut == 'validé' %}
                                                    {% set adhesionValidee = true %}
                                                {% endif %}
                                            {% endfor %}
                                            
                                            {% if adhesionValidee %}
                                                <button class="fr-btn fr-btn--sm" disabled style="width: 100%;">
                                                    <span class="fr-icon-check-line fr-icon--sm" aria-hidden="true"></span>
                                                    Adhésion validée
                                                </button>
                                            {% else %}
                                                <button class="fr-btn fr-btn--sm" disabled style="width: 100%;">
                                                    <span class="fr-icon-check-line fr-icon--sm" aria-hidden="true"></span>
                                                    Adhésion déjà effectuée
                                                </button>
                                            {% endif %}
                                        {% else %}
                                            <a href="{{ path('app_adhesion_mdl') }}" class="fr-btn fr-btn--sm" style="width: 100%;">
                                                <span class="fr-icon-arrow-right-line fr-icon--sm" aria-hidden="true"></span>
                                                Adhérer
                                            </a>
                                        {% endif %}
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="fr-col-12 fr-col-md-6 fr-col-lg-4">
                    <div class="fr-card">
                        <div class="fr-card__body">
                            <div class="fr-card__content">
                                <h3 class="fr-card__title">
                                    <span class="fr-icon-phone-line fr-icon--lg" aria-hidden="true"></span>
                                    Fiche d'urgence
                                </h3>
                                <p class="fr-card__desc">
                                    Fournissez les contacts d'urgence et informations médicales nécessaires pour votre sécurité.
                                </p>
                            </div>
                            <div class="fr-card__footer">
                                <ul class="fr-btns-group">
                                    <li>
                                        {% if fichesUrgence is defined and fichesUrgence|length > 0 %}
                                            {% set ficheValidee = false %}
                                            {% for fiche in fichesUrgence %}
                                                {% if fiche.statut == 'validé' %}
                                                    {% set ficheValidee = true %}
                                                {% endif %}
                                            {% endfor %}
                                            
                                            {% if ficheValidee %}
                                                <button class="fr-btn fr-btn--sm" disabled style="width: 100%;">
                                                    <span class="fr-icon-check-line fr-icon--sm" aria-hidden="true"></span>
                                                    Fiche validée
                                                </button>
                                            {% else %}
                                                <button class="fr-btn fr-btn--sm" disabled style="width: 100%;">
                                                    <span class="fr-icon-check-line fr-icon--sm" aria-hidden="true"></span>
                                                    Fiche déjà remplie
                                                </button>
                                            {% endif %}
                                        {% else %}
                                            <a href="{{ path('app_fiche_urgence') }}" class="fr-btn fr-btn--sm" style="width: 100%;">
                                                <span class="fr-icon-arrow-right-line fr-icon--sm" aria-hidden="true"></span>
                                                Remplir la fiche
                                            </a>
                                        {% endif %}
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="fr-col-12 fr-col-md-6 fr-col-lg-4">
                    <div class="fr-card">
                        <div class="fr-card__body">
                            <div class="fr-card__content">
                                <h3 class="fr-card__title">
                                    <span class="fr-icon-bank-line fr-icon--lg" aria-hidden="true"></span>
                                    Formulaire d'intendance
                                </h3>
                                <p class="fr-card__desc">
                                    Complétez le formulaire d'intendance avec vos informations et celles de votre représentant légal.
                                </p>
                            </div>
                            <div class="fr-card__footer">
                                <ul class="fr-btns-group">
                                    <li>
                                        {% if formulairesIntendance is defined and formulairesIntendance|length > 0 %}
                                            {% set formulaireValide = false %}
                                            {% for form in formulairesIntendance %}
                                                {% if form.statut == 'validé' %}
                                                    {% set formulaireValide = true %}
                                                {% endif %}
                                            {% endfor %}
                                            
                                            {% if formulaireValide %}
                                                <button class="fr-btn fr-btn--sm" disabled style="width: 100%;">
                                                    <span class="fr-icon-check-line fr-icon--sm" aria-hidden="true"></span>
                                                    Formulaire validé
                                                </button>
                                            {% else %}
                                                <button class="fr-btn fr-btn--sm" disabled style="width: 100%;">
                                                    <span class="fr-icon-check-line fr-icon--sm" aria-hidden="true"></span>
                                                    Formulaire déjà rempli
                                                </button>
                                            {% endif %}
                                        {% else %}
                                            <a href="{{ path('app_formulaire_intendance') }}" class="fr-btn fr-btn--sm" style="width: 100%;">
                                                <span class="fr-icon-arrow-right-line fr-icon--sm" aria-hidden="true"></span>
                                                Remplir le formulaire
                                            </a>
                                        {% endif %}
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
    {% else %}
        <div class="fr-alert fr-alert--info">
            <p class="fr-alert__title">Aucun dossier</p>
            <p>Vous n'avez pas encore de dossier d'inscription BTS.</p>
        </div>
        
        <div class="fr-mt-4v">
            <a href="{{ path('app_bts_liste') }}" class="fr-btn fr-icon-add-line fr-btn--icon-left">
                Créer mon premier dossier
            </a>
        </div>
    {% endif %}
</section>
{% endblock %}
